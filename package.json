    "db:generate": "npm run db:generate --workspace=database"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0"
  }
}
